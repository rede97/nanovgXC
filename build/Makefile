ifndef config
  config=debug
endif
export config

PROJECTS := example_glfw hello_skia

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

example_glfw: 
	@echo "==== Building example_glfw ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f example_glfw.make

hello_skia: 
	@echo "==== Building hello_skia ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f hello_skia.make

clean:
	@${MAKE} --no-print-directory -C . -f example_glfw.make clean
	@${MAKE} --no-print-directory -C . -f hello_skia.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
